@using DAL.Tables
@model ToDo

<!--Edit-->
<div class="modal fade" id="edit" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Edit</h4>
            </div>
            @using (Ajax.BeginForm("Edit", "ToDo", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace }))
            {
                @Html.AntiForgeryToken()
        <div class="modal-body">

            <label> Task</label>
            @Html.TextBoxFor(x => x.Description, new { htmlAttributes = new { @class = "form-control" } })
            <label> Due To Date</label>
            @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })

            @*@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        <br />
        <label> Due To Date</label>
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@

        </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                    <button id="btnContinueEdit" type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>


